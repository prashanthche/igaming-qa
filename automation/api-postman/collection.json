{
  "info": {
    "name": "iGaming API",
    "_postman_id": "demo-igaming",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth: Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{API_BASE_URL}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"{{TEST_USERNAME}}\", \"password\": \"{{TEST_PASSWORD}}\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status 200', function(){ pm.response.to.have.status(200); });",
              "pm.environment.set('token', pm.response.json().token);"
            ]
          }
        }
      ]
    },
    {
      "name": "Wallet: Balance",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{API_BASE_URL}}/wallet/balance"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status 200', function(){ pm.response.to.have.status(200); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Bet: Place Single",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{API_BASE_URL}}/bets/place",
        "body": {
          "mode": "raw",
          "raw": "{\"marketId\": \"123\", \"stake\": 10}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status 200/202', function(){ pm.expect([200,202]).to.include(pm.response.code); });"
            ]
          }
        }
      ]
    }
  ]
}